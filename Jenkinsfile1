node{
   stage('SCM checkout'){
     git 'https://github.com/karthikeyan4595/my-app'
   }
   stage('compile package'){
      //get maven home path
      def mvnHOME = tool name: 'maven3', type: 'maven'
      sh "${mvnHOME}/bin/mvn package"
   }
   stage('email-notification'){
    mail bcc: '', body: 'Welcome to Jenkins e-mail notification', cc: '', from: '', replyTo: '', subject: 'Jenkins-job', to: 'karthikeyan4595@gmail.com'   
}
}
